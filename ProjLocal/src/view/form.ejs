<%- include('partials/header') %>
    <div class="form-box">
        <form class="form" method="post" action="/newcontact">
            <span class="title">Cadastro De Local</span>
            <span class="subtitle">Crie uma nova identificação de endereço para que você consiga ter mais comodidade em
                seus serviços</span>
            <div class="form-container">
                <select id="txtEstado" placeholder="Estado=" name="sigla" required>
                    <option value="SP">SP</option>
                    <option value="RJ">RJ</option>
                    <option value="MG">MG</option>
                    <option value="ES">ES</option>
                </select>

                <select id="txtCidade" name="nome" required>
                    <option value="são_paulo">São Paulo</option>
                    <option value="cotia">Cotia</option>
                    <option value="vargem_grande">Vargem Grande</option>
                </select>
                <input type="text" name="bairro" class="input" placeholder="Município" required>
            </div>
            <button type="submit">Cadastre</button>
        </form>
    </div>
    <%- include('partials/footer') %>